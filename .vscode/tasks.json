                "args": ["http://localhost:3000/admin"]
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "‚úÖ Configuration compl√®te (tout-en-un)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "üì¶ Installer les d√©pendances",
